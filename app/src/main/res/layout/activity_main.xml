<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCD3CF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:hint="0"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="402dp"
        android:layout_height="2dp"
        android:layout_marginStart="9dp"
        android:background="#EFECEC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_answer" />

    <TextView
        android:id="@+id/text_type_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="24dp"
        android:hint="0"
        android:maxLines="1"
        android:text=""
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_answer" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="402dp"
        android:layout_height="2dp"
        android:layout_marginStart="9dp"
        android:background="#EFECEC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_type_request" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="63dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel_all_answer"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="ca"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_arrow_left"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="\u2190"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel_typed"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="c"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="/"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="7"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="8"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="9"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="*"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="4"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="5"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="6"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="+"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="1"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="2"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="3"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtract"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="-"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="0"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_modulo"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="%"
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="."
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginStart="10dp"
                android:text="="
                android:textSize="25dp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>